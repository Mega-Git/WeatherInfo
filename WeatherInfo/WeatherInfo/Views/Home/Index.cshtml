@{
    ViewData["Title"] = "Home Page";
}

@model WeatherCityListModel

<div class="text-center">
    <h1 class="display-4">Select a city</h1>
</div>

<div class="container">
    <form action="index" method="post">
        <div class="text-center">
            @Html.DropDownListFor(x => x.Cities.First().Id, new SelectList(Model.Cities, "Id", "Name"))
        </div>
    </form>
</div>